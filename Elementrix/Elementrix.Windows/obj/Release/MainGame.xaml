<Page
    x:Class="Elementrix.MainGame"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:Elementrix"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">

    <Grid>
        <Grid.Background>
            <ImageBrush Stretch="Fill" ImageSource="Assets/colorful-triangles-background_yB0qTG6.jpg"/>
        </Grid.Background>
        <Canvas x:Name="img" HorizontalAlignment="Left" Margin="93,60,0,0" VerticalAlignment="Top" Width="420
                " Height="770
                
                " RenderTransformOrigin="0.5,0.5" Background="White">
            <Canvas.RenderTransform>
                <CompositeTransform/>
            </Canvas.RenderTransform>
            <Canvas x:Name="maincard" HorizontalAlignment="Left" Margin="10,10,10,10" VerticalAlignment="Center" Width="400
                " Height="750
                
                " RenderTransformOrigin="0.5,0.5" Background="Black">
                <Image x:Name="image" Height="320" Canvas.Left="10
                   " Canvas.Top="15" Width="320"/>
                <TextBlock x:Name="NameOfElement" Canvas.Left="100
                       " TextWrapping="Wrap" Canvas.Top="323" Height="44" Width="200" FontSize="33.333" FontFamily="AR DESTINE" TextAlignment="Center"/>
                <TextBlock x:Name="EConfig" Canvas.Left="15" TextWrapping="Wrap" Canvas.Top="367" FontSize="13.333" FontFamily="Arial"/>
                <TextBlock x:Name="trivia" Canvas.Left="15" TextWrapping="Wrap" Canvas.Top="606" Height="114" Width="370" FontSize="16" SelectionHighlightColor="#FF5D29D4" Foreground="White" FontFamily="Arial Black" FontStyle="Italic"/>
                <TextBlock x:Name="AN" Canvas.Left="335" TextWrapping="Wrap" Canvas.Top="29" Height="49" Width="55" FontSize="42.667" FontWeight="Bold" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                <Button x:ConnectionId='2' x:Name="atomicn" Content="Atomic number :" Canvas.Left="12" Canvas.Top="393" Height="40" Width="190
                    " Background="Black" BorderThickness="1,1,1,1"                        />
                <Button x:ConnectionId='3' x:Name="atomicw" Content="Atomic Weight :" Canvas.Left="12" Canvas.Top="433" Height="40" Width="190
                    " Background="Black" BorderThickness="1,1,1,1"                        />
                <Button x:ConnectionId='4' x:Name="electronegativity" Content="Electronegativity :" Canvas.Left="12" Canvas.Top="473" Height="40" Width="190
                    " Background="Black" BorderThickness="1,1,1,1"                                  />
                <Button x:ConnectionId='5' x:Name="density" Content="Density(g/cm3) :" Canvas.Left="12" Canvas.Top="513" Height="40" Width="190
                    " Background="Black" BorderThickness="1,1,1,1"                        />
                <Button x:ConnectionId='6' x:Name="meltingpoint" Content="Melting Point(C) :" Canvas.Left="12" Canvas.Top="553" Height="40" Width="190
                    " Background="Black" BorderThickness="1,1,1,1"                             />
                <!---->
                <Button x:ConnectionId='7' x:Name="boilingpoint" Content="Boiling Point(C) :" Canvas.Left="202" Canvas.Top="393" Height="40" Width="190
                    " Background="Black" BorderThickness="1,1,1,1"                             />
                <Button x:ConnectionId='8' x:Name="atomicradius" Content="Atomic Radius(pm) :" Canvas.Left="202" Canvas.Top="433" Height="40" Width="190
                    " Background="Black" BorderThickness="1,1,1,1" FontSize="13.333"                             />
                <Button x:ConnectionId='9' x:Name="nofisotopes" Content="No of Isotopes:" Canvas.Left="202" Canvas.Top="473" Height="40" Width="190
                    " Background="Black" BorderThickness="1,1,1,1"                            />
                <Button x:ConnectionId='10' x:Name="electronaffinity" Content="Electron Affinity(kJ/mol):" Canvas.Left="202" Canvas.Top="513" Height="40" Width="190
                    " Background="Black" BorderThickness="1,1,1,1" FontSize="10.667"                                 />
                <Button x:ConnectionId='11' x:Name="yod" Content="Year of Discovery:" Canvas.Left="202" Canvas.Top="553" Height="40" Width="190
                    " Background="Black" BorderThickness="1,1,1,1"                    />
            </Canvas>
        </Canvas>
        <Image x:Name="backcpucard" HorizontalAlignment="Left" Height="3430" Margin="935,50,-105,-2641" VerticalAlignment="Top" Width="770" Source="Assets/Periodic table Background1.png" RenderTransformOrigin="0.5,0.5">
            <Image.Projection>
                <PlaneProjection/>
            </Image.Projection>
            <Image.RenderTransform>
                <CompositeTransform />
            </Image.RenderTransform>
        </Image>
        <!--cpu's card-->
                <Canvas x:Name="cpucanv" HorizontalAlignment="Left" Margin="1108,60,0,0" VerticalAlignment="Top" Width="420
                " Height="770
                
                " RenderTransformOrigin="0.5,0.5" Background="White" Visibility="Collapsed">
                    <Canvas.Projection>
                        <PlaneProjection RotationY="90"/>
                    </Canvas.Projection>
                    <Canvas.RenderTransform>
                        <CompositeTransform />
                    </Canvas.RenderTransform>

                    <Canvas x:Name="mcpucard" HorizontalAlignment="Left" Margin="10,10,10,10" VerticalAlignment="Center" Width="400
                " Height="750
                
                " RenderTransformOrigin="0.5,0.5" Background="Black">
                        <Image x:Name="mcpuimage" Height="320" Canvas.Left="10
                   " Canvas.Top="15" Width="320"/>
                        <TextBlock x:Name="mcpuNameOfElement" Canvas.Left="100
                       " TextWrapping="Wrap" Canvas.Top="323" Height="44" Width="200" FontSize="33.333" FontFamily="AR DESTINE" TextAlignment="Center"/>
                        <TextBlock x:Name="mcpuEConfig" Canvas.Left="15" TextWrapping="Wrap" Canvas.Top="367" FontSize="13.333" FontFamily="Arial"/>
                        <TextBlock x:Name="mcputrivia" Canvas.Left="15" TextWrapping="Wrap" Canvas.Top="606" Height="114" Width="370" FontSize="16" SelectionHighlightColor="#FF5D29D4" Foreground="White" FontFamily="Arial Black" FontStyle="Italic"/>
                        <TextBlock x:Name="mcpuAN" Canvas.Left="335" TextWrapping="Wrap" Canvas.Top="29" Height="49" Width="55" FontSize="42.667" FontWeight="Bold" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        <Button x:Name="mcpuatomicn" Content="Atomic number :" Canvas.Left="12" Canvas.Top="393" Height="40" Width="190
                    " Background="Black" BorderThickness="1,1,1,1"/>
                        <Button x:Name="mcpuatomicw" Content="Atomic Weight :" Canvas.Left="12" Canvas.Top="433" Height="40" Width="190
                    " Background="Black" BorderThickness="1,1,1,1"/>
                        <Button x:Name="mcpuelectronegativity" Content="Electronegativity :" Canvas.Left="12" Canvas.Top="473" Height="40" Width="190
                    " Background="Black" BorderThickness="1,1,1,1"/>
                        <Button x:Name="mcpudensity" Content="Density(g/cm3) :" Canvas.Left="12" Canvas.Top="513" Height="40" Width="190
                    " Background="Black" BorderThickness="1,1,1,1"/>
                        <Button x:Name="mcpumeltingpoint" Content="Melting Point(C) :" Canvas.Left="12" Canvas.Top="553" Height="40" Width="190
                    " Background="Black" BorderThickness="1,1,1,1"/>
                        <!---->
                <Button x:Name="mcpuboilingpoint" Content="Boiling Point(C) :" Canvas.Left="202" Canvas.Top="393" Height="40" Width="190
                    " Background="Black" BorderThickness="1,1,1,1"/>
                <Button x:Name="mcpuatomicradius" Content="Atomic Radius(pm) :" Canvas.Left="202" Canvas.Top="433" Height="40" Width="190
                    " Background="Black" BorderThickness="1,1,1,1" FontSize="13.333"/>
                <Button x:Name="mcpunofisotopes" Content="No of Isotopes:" Canvas.Left="202" Canvas.Top="473" Height="40" Width="190
                    " Background="Black" BorderThickness="1,1,1,1"/>
                <Button x:Name="mcpuelectronaffinity" Content="Electron Affinity(kJ/mol):" Canvas.Left="202" Canvas.Top="513" Height="40" Width="190
                    " Background="Black" BorderThickness="1,1,1,1" FontSize="10.667"/>
                <Button x:Name="mcpuyod" Content="Year of Discovery:" Canvas.Left="202" Canvas.Top="553" Height="40" Width="190
                    " Background="Black" BorderThickness="1,1,1,1"/>
            </Canvas>
        </Canvas>
        <StackPanel HorizontalAlignment="Left" Margin="597,50,0,0" Width="469" Height="760" VerticalAlignment="Top">
        	<TextBlock x:Name="whosturn" HorizontalAlignment="Left" Margin="0,0,-225,0" TextWrapping="Wrap" Text="Turn" VerticalAlignment="Top" Height="101" Width="390" FontSize="40" TextAlignment="Center"/>
        	<TextBlock x:Name="nofuserscards" HorizontalAlignment="Left" Margin="0,0,-225,0" TextWrapping="Wrap" Text="No of user's cards" VerticalAlignment="Top" Height="101" Width="390" FontSize="40" TextAlignment="Center" Foreground="White"/>
        	<TextBlock x:Name="nofcpuscards" HorizontalAlignment="Left" TextWrapping="Wrap" Text="No of cpu's cards: " VerticalAlignment="Top" Height="101" Width="390" FontSize="40" TextAlignment="Center"/>
        	<TextBlock x:Name="alertmsg" HorizontalAlignment="Left" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Height="101" Width="390" FontSize="40" TextAlignment="Center"/>
        	<TextBlock x:Name="callbox" HorizontalAlignment="Left" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Height="101" Width="490" FontSize="40" TextAlignment="Center"/>
        	<Button x:ConnectionId='1' x:Name="okbutton" Content="Ok" HorizontalAlignment="Center" VerticalAlignment="Top" Height="123" Width="231" FontSize="46.667"                          Visibility="Collapsed"/>
            <Button x:Name="showcardbutton" Content="Show" HorizontalAlignment="Center" Margin="707,532,0,0" VerticalAlignment="Top" Height="123" Width="231" FontSize="46.667" Visibility="Collapsed"/>
        </StackPanel>
        <MediaElement x:Name="media" HorizontalAlignment="Left" Height="100" Margin="568,839,0,-39" VerticalAlignment="Top" Width="100"/>
        
        <VisualStateManager.VisualStateGroups>
            <VisualStateGroup x:Name="VisualStateGroup">

                <!--This animation will be invoked when you tap on the front rectangle-->
                        <VisualState x:Name="FlipCardFront" >
                            <Storyboard >
                                <DoubleAnimationUsingKeyFrames Storyboard.TargetProperty="(UIElement.Projection).(PlaneProjection.RotationY)" Storyboard.TargetName="backcpucard">
                                    <EasingDoubleKeyFrame KeyTime="0" Value="0"/>
                                    <EasingDoubleKeyFrame KeyTime="0:0:0.25" Value="90"/>
                                </DoubleAnimationUsingKeyFrames>
                                <ObjectAnimationUsingKeyFrames Storyboard.TargetProperty="(UIElement.Visibility)" Storyboard.TargetName="cpucanv">
                                    <DiscreteObjectKeyFrame KeyTime="0:0:0.25">
                                        <DiscreteObjectKeyFrame.Value>
                                            <Visibility>Visible</Visibility>
                                        </DiscreteObjectKeyFrame.Value>
                                    </DiscreteObjectKeyFrame>
                                </ObjectAnimationUsingKeyFrames>
                                <DoubleAnimationUsingKeyFrames Storyboard.TargetProperty="(UIElement.Projection).(PlaneProjection.RotationY)" Storyboard.TargetName="cpucanv">
                                    <EasingDoubleKeyFrame KeyTime="0:0:0.25" Value="-90"/>
                                    <EasingDoubleKeyFrame KeyTime="0:0:0.5" Value="0"/>
                                </DoubleAnimationUsingKeyFrames>
                            </Storyboard>
                        </VisualState>

                        <!--This animation will be invoked when you tap on the backward rectangle-->
                        <VisualState x:Name="FlipCardBack" >
                            <Storyboard >
                                <DoubleAnimationUsingKeyFrames Storyboard.TargetProperty="(UIElement.Projection).(PlaneProjection.RotationY)" Storyboard.TargetName="cpucanv">
                                    <EasingDoubleKeyFrame KeyTime="0" Value="0"/>
                                    <EasingDoubleKeyFrame KeyTime="0:0:.25" Value="-90"/>
                                </DoubleAnimationUsingKeyFrames>
                                <ObjectAnimationUsingKeyFrames Storyboard.TargetProperty="(UIElement.Visibility)" Storyboard.TargetName="backcpucard">
                                    <DiscreteObjectKeyFrame KeyTime="0:0:.25">
                                        <DiscreteObjectKeyFrame.Value>
                                            <Visibility>Visible</Visibility>
                                        </DiscreteObjectKeyFrame.Value>
                                    </DiscreteObjectKeyFrame>
                                </ObjectAnimationUsingKeyFrames>
                                <DoubleAnimationUsingKeyFrames Storyboard.TargetProperty="(UIElement.Projection).(PlaneProjection.RotationY)" Storyboard.TargetName="backcpucard">
                                    <EasingDoubleKeyFrame KeyTime="0:0:.25" Value="90"/>
                                    <EasingDoubleKeyFrame KeyTime="0:0:.5" Value="0"/>
                                </DoubleAnimationUsingKeyFrames>
                            </Storyboard>
                        </VisualState>
                        </VisualStateGroup>
                        </VisualStateManager.VisualStateGroups>
    </Grid>
</Page>

